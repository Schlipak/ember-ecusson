<span>
  {{title}} <span class="sub">{{subtitle}}</span>
</span>
<span class="tags-container">
  {{#each tags as |tag index|}}
    <div class="tag {{tag.state}}">
      <span>{{tag.label}}</span>
      <a href="/#" {{action "remove" index}} tabindex="-1">
        <i class="icon fa fa-times"></i>
      </a>
    </div>
  {{/each}}
  <input
    type="text"
    name="tagsInput"
    {{action "checkNewTag" on="input" preventDefault=false}}
  >
  <input type="text" name={{name}} value={{concatTags}} class="hidden" disabled="disabled">
</span>
